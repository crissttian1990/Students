@model IEnumerable<Entities.Student>

@{
    ViewBag.Title = "Index";
}


<h2>Students</h2>



@{
    var listItems = new List<System.Web.UI.WebControls.ListItem>
        {
              new System.Web.UI.WebControls.ListItem { Text = "Name", Value = "N" },
              new System.Web.UI.WebControls.ListItem { Text = "Surname", Value = "S" },
              new System.Web.UI.WebControls.ListItem { Text = "Course", Value = "C" }
        };
}

    @using (Html.BeginForm("Index", "Student", FormMethod.Get, new { @class = "form-inline" }))
    {

        <div class="row well well-lg">

                <div class="col-md-3 form-group">
                    <label for="searchbox">Text:</label>
                    @Html.TextBox("Search", ViewBag.CurrentFilter as string, new { @class = "form-control", @id = "searchbox" })
                </div>
                <div class="col-md-3 form-group">
                    <label for="searchby">Find by:</label>
                    @Html.DropDownList("SearchBy", new SelectList(listItems, "Value", "Text"), new { @class = "form-control", @id = "searchby" })
                </div>
                <div class="col-md-3">
                    <input type="submit" class="form-control" value="Search" />
                </div>
                <div class="col-md-2 media-middle">
                    @Html.ActionLink("Create New", "Create")
                </div>
            <div class="col-md-1 media-middle" >
                @Html.ActionLink("View All", "Index")
            </div>
        </div>

    }

    <table class="table table-striped table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.StudentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.StudentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.StudentId })
            </td>
        </tr>
    }

</table>

@Html.Partial("PaginationPartial", (int) ViewBag.totalStudents)